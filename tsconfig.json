{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"outDir": "dist",
		"declaration": true,
		"pretty": true,
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules",
		"dist",
	],
	"include": [
		"src/**/*",
		"global.d.ts"
	],
	"compileOnSave": false,
}